<h1>Eat da Burger!</h1>

<h2>Search a burger</h2>
<form class="search-form">

  <div class="form-group">
    <label for="ca">Enter Burger:</label>
    <input type="text" id="id" name="burgerName">
  </div>
  <button type="submit">Find burger</button>
</form>

<ul>
  {{#each burgerName}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger that have been DEVOURED!</h2>

<ul>
  {{#each burgerName}}
    {{#if devoured}}
      {{> burger/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

