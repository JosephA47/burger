<h1>Eat da Burger!</h1>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  <h1>{{this.id}}: {{this.burgerName}}</h1>
  <button class="change-devour" data-id="{{id}}" data-changeDevour="{{devour}}">
    {{#if devoured}}Consume da Burger!{{else}}Consume da Burger!{{/if}}
  </button>
  {{/unless}}
  {{/each}}
</ul>

<div style="float: right;">
  <h2>Burgers that have been DEVOURED!</h2>
  <ul>
    {{#each burger}}
    {{#if devoured}}
    <h1>{{this.id}}: {{this.burgerName}}</h1>
    {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Create new Burger</h2>
<div class="form-group">
  <label for="ca">Enter your new burger:</label>
  <input type="text" class="add-burger" id="burger" name="burgerName">
  <button type="submit">Find burger</button>
</div>